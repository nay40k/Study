<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.MainController">
    <children>
        <TextField fx:id="inputField"/>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button mnemonicParsing="false" text="1" onAction="#btn1Action" GridPane.columnIndex="0"
                        GridPane.rowIndex="0"/>
                <Button mnemonicParsing="false" text="2" onAction="#btn2Action" GridPane.columnIndex="1"
                        GridPane.rowIndex="0"/>
                <Button mnemonicParsing="false" text="3" onAction="#btn3Action" GridPane.columnIndex="0"
                        GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" text="4" onAction="#btn4Action" GridPane.columnIndex="1"
                        GridPane.rowIndex="1"/>
                <Button mnemonicParsing="false" text="+" onAction="#btnPlusAction" GridPane.columnIndex="2"
                        GridPane.rowIndex="2"/>
                <Button mnemonicParsing="false" text="=" onAction="#btnCalculateAction" GridPane.columnIndex="2"
                        GridPane.rowIndex="3"/>
            </children>
        </GridPane>
    </children>
</VBox>